{
  "request": {
    "method": "DELETE",
    "urlPattern": "/api/plm/runs/([^/]+)$",
    "headers": {
      "Authorization": {
        "matches": "Bearer .*"
      }
    }
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "success": true,
      "run_id": "{{request.pathSegments.[2]}}",
      "status": "cancelled",
      "message": "Pipeline run cancelled successfully"
    },
    "transformers": ["response-template"]
  }
}